.root
  padding: 12px
  line-height: 1.25
  border-top: 1px solid #eee
  display: flex

  &:hover
    background-color: #f5f5f5

.title
  word-break: break-word
  font-size: 16px

  &:hover
    color: #4078c0

.info
  color: #767676
  line-height: 1.25
  font-size: 12px
  margin-top: 3px

.avatar
  width: 48px
  height: 48px
  border-radius: 3px

.left
  text-align: center
  width: 15%

.right
  max-width: 830px
